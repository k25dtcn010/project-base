{
  "name": "project-base",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "@prisma/client": "^6.15.0"
    }
  },
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter server dev",
    "pre-start": "bun db:start && bun db:push && bun db:seed",
    "db:push": "bun run --filter @project-base/db db:push",
    "db:studio": "bun run --filter @project-base/db db:studio",
    "db:generate": "bun run --filter @project-base/db db:generate",
    "db:migrate": "bun run --filter @project-base/db db:migrate",
    "db:seed": "bun run --filter @project-base/db db:seed",
    "db:start": "bun run --filter @project-base/db db:start",
    "db:watch": "bun run --filter @project-base/db db:watch",
    "db:stop": "bun run --filter @project-base/db db:stop",
    "db:down": "bun run --filter @project-base/db db:down",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v --remove-orphans",
    "start": "docker compose -f 'docker-compose.dev.yml' up -d --build",
    "down": "docker compose -f 'docker-compose.dev.yml' down",
    "format": "prettier --write ."
  },
  "packageManager": "bun@1.3.1",
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/bun": "^1.2.6",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.5"
  }
}
