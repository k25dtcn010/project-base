# Database Configuration
# Copy this file to .env and update the values

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:password@localhost:5678/project-base"

# Database credentials (must match docker-compose.yml)
POSTGRES_DB=project-base
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5678

# Prisma configuration
# Enable query logging (set to "true" for development)
PRISMA_LOG_QUERIES=false

# Shadow database for migrations (optional)
# SHADOW_DATABASE_URL="postgresql://postgres:password@localhost:5678/project-base_shadow"
