generator client {
  provider      = "prisma-client"
  output        = "../generated"
  moduleFormat  = "esm"
  runtime       = "bun"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @map("_id")
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime

  // Additional profile fields for API spec
  phone      String?
  department String?
  position   String?
  role       String    @default("employee") // admin, manager, employee
  managerId  String?   @map("manager_id")
  deviceId   String?   @map("device_id")
  joinDate   DateTime? @map("join_date")
  isActive   Boolean   @default(true) @map("is_active")

  sessions     Session[]
  accounts     Account[]
  manager      User?     @relation("UserHierarchy", fields: [managerId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  subordinates User[]    @relation("UserHierarchy")

  // New relations for Leave and OT
  leaves             Leave[]
  leaveRequests      LeaveRequest[]
  approvedLeaves     LeaveRequest[]    @relation("ManagerApprovedLeaves")
  otRequests         OvertimeRequest[]
  approvedOTRequests OvertimeRequest[] @relation("ManagerApprovedOT")

  @@unique([email])
  @@index([managerId])
  @@map("user")
}

model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String

  // Device tracking fields for API spec
  deviceId       String?   @map("device_id")
  deviceBrand    String?   @map("device_brand")
  deviceModel    String?   @map("device_model")
  osVersion      String?   @map("os_version")
  platform       String? // ios, android, web
  lastActivityAt DateTime? @map("last_activity_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @map("_id")
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Company {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  csvFile   String   @map("csv_file")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  employees Employee[]

  @@map("company")
}

model Department {
  id          String  @id @default(cuid()) @map("_id")
  name        String
  code        String  @unique
  level       Int
  description String?
  colorCode   String  @map("color_code")
  parentId    String? @map("parent_id")

  parent   Department?  @relation("DepartmentHierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children Department[] @relation("DepartmentHierarchy")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  employees Employee[]

  @@map("department")
}

model Employee {
  id               String    @id @default(cuid()) @map("_id")
  employeeCode     String    @unique @map("employee_code")
  fullName         String    @map("full_name")
  gender           String
  position         String
  role             String
  birthday         DateTime?
  idCardNumber     String?   @map("id_card_number")
  idCardIssueDate  DateTime? @map("id_card_issue_date")
  idCardIssuer     String?   @map("id_card_issuer")
  permanentAddress String?   @map("permanent_address")
  phone            String?
  education        String?
  startDate        DateTime? @map("start_date")
  relativesNote    String?   @map("relatives_note")

  departmentId String  @map("department_id")
  companyId    String  @map("company_id")
  managerId    String? @map("manager_id")

  department   Department @relation(fields: [departmentId], references: [id])
  company      Company    @relation(fields: [companyId], references: [id])
  manager      Employee?  @relation("EmployeeHierarchy", fields: [managerId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  subordinates Employee[] @relation("EmployeeHierarchy")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  attendances          Attendance[]
  schedules            ShiftSchedule[]
  requests             AttendanceRequest[]
  confirmedAttendances Attendance[]        @relation("ManagerConfirmedAttendances")
  approvedShifts       AttendanceShift[]   @relation("ManagerApprovedShifts")
  approvedRequests     AttendanceRequest[] @relation("ManagerApprovedRequests")
  createdSchedules     ShiftSchedule[]     @relation("ManagerCreatedSchedules")

  @@index([departmentId])
  @@index([companyId])
  @@index([managerId])
  @@map("employee")
}

model Shift {
  id          String   @id @default(cuid()) @map("_id")
  name        String
  startTime   String   @map("start_time") // Format: "HH:mm"
  endTime     String   @map("end_time") // Format: "HH:mm"
  description String?
  isActive    Boolean  @default(true) @map("is_active")
  companyId   String?  @map("company_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  attendanceShifts AttendanceShift[]
  schedules        ShiftSchedule[]
  requests         AttendanceRequest[]

  @@map("shift")
}

model Attendance {
  id                 String    @id @default(cuid()) @map("_id")
  employeeId         String    @map("employee_id")
  checkInTime        DateTime  @map("check_in_time")
  checkOutTime       DateTime? @map("check_out_time")
  location           String?
  note               String?
  isMissingCheckOut  Boolean   @default(false) @map("is_missing_check_out")
  managerConfirmedBy String?   @map("manager_confirmed_by")
  managerConfirmedAt DateTime? @map("manager_confirmed_at")

  // Location tracking fields
  latitude  Float?
  longitude Float?
  accuracy  Float?
  altitude  Float?

  // Network tracking fields
  wifiName       String? @map("wifi_name")
  wifiBSSID      String? @map("wifi_bssid")
  wifiIP         String? @map("wifi_ip")
  mobileIP       String? @map("mobile_ip")
  connectionType String? @map("connection_type") // wifi, mobile, unknown

  // Device tracking fields
  deviceId         String?  @map("device_id")
  deviceBrand      String?  @map("device_brand")
  deviceModel      String?  @map("device_model")
  osVersion        String?  @map("os_version")
  platform         String? // ios, android, web
  isPhysicalDevice Boolean? @map("is_physical_device")

  // Photo storage
  photo Bytes? // Store as binary data

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  employee         Employee          @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  managerConfirmed Employee?         @relation("ManagerConfirmedAttendances", fields: [managerConfirmedBy], references: [id])
  attendanceShifts AttendanceShift[]

  @@index([employeeId])
  @@index([checkInTime])
  @@map("attendance")
}

model AttendanceShift {
  id                String    @id @default(cuid()) @map("_id")
  attendanceId      String    @map("attendance_id")
  shiftId           String    @map("shift_id")
  workDate          DateTime  @map("work_date") @db.Date
  actualStartTime   DateTime  @map("actual_start_time")
  actualEndTime     DateTime  @map("actual_end_time")
  durationMinutes   Int       @map("duration_minutes")
  lateMinutes       Int       @default(0) @map("late_minutes")
  earlyLeaveMinutes Int       @default(0) @map("early_leave_minutes")
  isApproved        Boolean   @default(false) @map("is_approved")
  approvedBy        String?   @map("approved_by")
  approvedAt        DateTime? @map("approved_at")
  note              String?
  shiftType         String    @default("primary") @map("shift_type") // "primary" | "boundary" | "overtime"
  overlapPercentage Float     @default(100) @map("overlap_percentage") // Percentage of shift duration covered
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  attendance Attendance @relation(fields: [attendanceId], references: [id], onDelete: Cascade)
  shift      Shift      @relation(fields: [shiftId], references: [id])
  manager    Employee?  @relation("ManagerApprovedShifts", fields: [approvedBy], references: [id])

  @@index([attendanceId])
  @@index([shiftId])
  @@index([workDate])
  @@map("attendance_shift")
}

model ShiftSchedule {
  id                String   @id @default(cuid()) @map("_id")
  employeeId        String   @map("employee_id")
  shiftId           String   @map("shift_id")
  scheduledFromDate DateTime @map("scheduled_from_date") @db.Date
  scheduledToDate   DateTime @map("scheduled_to_date") @db.Date
  note              String?
  createdBy         String   @map("created_by")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  shift    Shift    @relation(fields: [shiftId], references: [id])
  manager  Employee @relation("ManagerCreatedSchedules", fields: [createdBy], references: [id])

  @@index([employeeId])
  @@index([shiftId])
  @@index([scheduledFromDate, scheduledToDate])
  @@map("shift_schedule")
}

model AttendanceRequest {
  id              String    @id @default(cuid()) @map("_id")
  employeeId      String    @map("employee_id")
  shiftId         String    @map("shift_id")
  requestedDate   DateTime  @map("requested_date") @db.Date
  fromTime        DateTime  @map("from_time")
  toTime          DateTime  @map("to_time")
  reason          String
  status          String    @default("PENDING") // PENDING, APPROVED, REJECTED
  approvedBy      String?   @map("approved_by")
  approvedAt      DateTime? @map("approved_at")
  rejectionReason String?   @map("rejection_reason")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  employee Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  shift    Shift     @relation(fields: [shiftId], references: [id])
  manager  Employee? @relation("ManagerApprovedRequests", fields: [approvedBy], references: [id])

  @@index([employeeId])
  @@index([status])
  @@index([requestedDate])
  @@map("attendance_request")
}

// Leave Management Models
model Leave {
  id            String   @id @default(cuid()) @map("_id")
  userId        String   @map("user_id")
  type          String // Annual, Sick, Personal, Unpaid
  totalDays     Int      @map("total_days")
  usedDays      Int      @default(0) @map("used_days")
  remainingDays Int      @map("remaining_days")
  year          Int
  startDate     DateTime @map("start_date")
  endDate       DateTime @map("end_date")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([year])
  @@map("leave")
}

model LeaveRequest {
  id               String    @id @default(cuid()) @map("_id")
  userId           String    @map("user_id")
  leaveType        String    @map("leave_type") // Annual, Sick, Personal, Unpaid
  startDate        DateTime  @map("start_date") @db.Date
  endDate          DateTime  @map("end_date") @db.Date
  numberOfDays     Int       @map("number_of_days")
  reason           String
  status           String    @default("Pending") // Pending, Approved, Rejected
  approverId       String?   @map("approver_id")
  approverComments String?   @map("approver_comments")
  requestDate      DateTime  @default(now()) @map("request_date")
  approvedDate     DateTime? @map("approved_date")
  attachment       Bytes? // Store file as binary data
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  user     User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  approver User? @relation("ManagerApprovedLeaves", fields: [approverId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([startDate, endDate])
  @@map("leave_request")
}

// Overtime Request Model
model OvertimeRequest {
  id               String    @id @default(cuid()) @map("_id")
  userId           String    @map("user_id")
  otDate           DateTime  @map("ot_date") @db.Date
  startTime        String    @map("start_time") // HH:MM format
  endTime          String    @map("end_time") // HH:MM format
  hours            Float
  reason           String
  status           String    @default("Pending") // Pending, Approved, Rejected
  approverId       String?   @map("approver_id")
  approverComments String?   @map("approver_comments")
  requestDate      DateTime  @default(now()) @map("request_date")
  approvedDate     DateTime? @map("approved_date")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  user     User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  approver User? @relation("ManagerApprovedOT", fields: [approverId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([otDate])
  @@map("overtime_request")
}
